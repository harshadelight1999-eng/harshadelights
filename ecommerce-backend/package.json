{
  "name": "harsha-delights-ecommerce-backend",
  "version": "1.0.0",
  "description": "Medusa.js E-commerce Backend for Harsha Delights Confectionery with ERPNext Integration",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "build": "medusa build",
    "start": "medusa start",
    "dev": "medusa develop",
    "seed": "medusa seed -f ./data/seed.json",
    "migrate": "medusa db:migrate",
    "migrations:generate": "medusa db:generate",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "medusa",
    "ecommerce",
    "confectionery",
    "erpnext",
    "b2b",
    "b2c",
    "inventory"
  ],
  "author": "Harsha Delights Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@medusajs/admin-sdk": "^2.10.3",
    "@medusajs/auth": "^2.10.3",
    "@medusajs/auth-emailpass": "^2.10.3",
    "@medusajs/cache-redis": "^2.10.3",
    "@medusajs/cart": "^2.10.3",
    "@medusajs/currency": "^2.10.3",
    "@medusajs/customer": "^2.10.3",
    "@medusajs/dashboard": "^2.10.3",
    "@medusajs/event-bus-redis": "^2.10.3",
    "@medusajs/file-local": "^2.10.3",
    "@medusajs/framework": "^2.10.3",
    "@medusajs/fulfillment-manual": "^2.10.3",
    "@medusajs/inventory": "^2.10.3",
    "@medusajs/medusa": "^2.10.3",
    "@medusajs/notification": "^2.10.3",
    "@medusajs/order": "^2.10.3",
    "@medusajs/payment-stripe": "^2.10.3",
    "@medusajs/pricing": "^2.10.3",
    "@medusajs/product": "^2.10.3",
    "@medusajs/promotion": "^2.10.3",
    "@medusajs/region": "^2.10.3",
    "@medusajs/sales-channel": "^2.10.3",
    "@medusajs/stock-location": "^2.10.3",
    "@medusajs/store": "^2.10.3",
    "@medusajs/user": "^2.10.3",
    "@medusajs/workflow-engine-inmemory": "^2.10.3",
    "@mikro-orm/core": "6.4.3",
    "@mikro-orm/knex": "6.4.3",
    "@mikro-orm/migrations": "6.4.3",
    "@mikro-orm/postgresql": "6.4.3",
    "awilix": "^8.0.1",
    "axios": "^1.6.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.0",
    "ioredis": "^5.3.2",
    "lodash": "^4.17.21",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "uuid": "^9.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@medusajs/cli": "^2.10.3",
    "@swc/core": "^1.5.7",
    "@swc/jest": "^0.2.36",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.11.15",
    "@types/pg": "^8.11.0",
    "@types/uuid": "^9.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/node_modules/"
    ],
    "rootDir": "src",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "transform": {
      "^.+\\.(t|j)s$": "@swc/jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage"
  }
}
