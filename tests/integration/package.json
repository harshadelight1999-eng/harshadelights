{
  "name": "harsha-delights-integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for Harsha Delights confectionery management system",
  "main": "index.js",
  "scripts": {
    "test": "mocha '**/*.test.js' --timeout 30000 --recursive",
    "test:pricing": "mocha pricing-engine-integration.test.js --timeout 20000",
    "test:sync": "mocha sync-services-integration.test.js --timeout 25000",
    "test:e2e": "mocha end-to-end-workflow.test.js --timeout 45000",
    "test:watch": "mocha '**/*.test.js' --timeout 30000 --recursive --watch",
    "test:coverage": "nyc mocha '**/*.test.js' --timeout 30000 --recursive",
    "setup": "node setup-test-environment.js",
    "cleanup": "node cleanup-test-environment.js"
  },
  "keywords": [
    "integration-tests",
    "confectionery",
    "erpnext",
    "pricing",
    "sync",
    "e2e"
  ],
  "author": "Harsha Delights Development Team",
  "license": "MIT",
  "dependencies": {
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "supertest": "^6.3.3",
    "mysql2": "^3.6.0",
    "ws": "^8.13.0",
    "axios": "^1.4.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "nyc": "^15.1.0",
    "sinon": "^15.2.0",
    "chai-http": "^4.4.0"
  },
  "nyc": {
    "include": [
      "../../api-gateway/src/**/*.js",
      "../../sync-services/src/**/*.ts"
    ],
    "exclude": [
      "**/*.test.js",
      "**/node_modules/**"
    ],
    "reporter": [
      "html",
      "text",
      "lcov"
    ],
    "report-dir": "./coverage"
  },
  "mocha": {
    "reporter": "spec",
    "recursive": true,
    "timeout": 30000,
    "bail": false,
    "exit": true
  }
}