# =====================================================================================
# HARSHA DELIGHTS DEVELOPMENT ENVIRONMENT VARIABLES
# =====================================================================================
# Copy this file to .env and update the values according to your setup
# Never commit the actual .env file to version control
# =====================================================================================

# =====================================================================================
# GENERAL CONFIGURATION
# =====================================================================================

# Environment
NODE_ENV=development
COMPOSE_PROJECT_NAME=harsha-delights

# Domain Configuration
DOMAIN=harshadelights.local
SSL_ENABLED=false

# =====================================================================================
# DATABASE CREDENTIALS
# =====================================================================================

# MariaDB (ERPNext & EspoCRM)
MARIADB_ROOT_PASSWORD=harsha_root_2024
MARIADB_ERPNEXT_PASSWORD=erpnext_pass_2024
MARIADB_HOST=mariadb
MARIADB_PORT=3306

# PostgreSQL (API Gateway & Medusa)
POSTGRES_PASSWORD=harsha_postgres_2024
POSTGRES_USER=harsha_admin
POSTGRES_DB=harsha_delights_gateway
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =====================================================================================
# REDIS CONFIGURATION
# =====================================================================================

REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_COMMANDER_PASSWORD=redis_admin_2024

# =====================================================================================
# ERPNEXT CONFIGURATION
# =====================================================================================

ERPNEXT_SITE_NAME=harshadelights.local
ERPNEXT_ADMIN_PASSWORD=admin_pass_2024
ERPNEXT_ENCRYPTION_KEY=generate_secure_key_32_chars_here
ERPNEXT_API_KEY=
ERPNEXT_API_SECRET=

# =====================================================================================
# API GATEWAY CONFIGURATION
# =====================================================================================

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_256_bits_here
JWT_REFRESH_SECRET=your_super_secure_jwt_refresh_secret_key_256_bits_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=harsha-delights-api-gateway

# API Security
API_KEY_SECRET=32_char_api_key_secret_for_generation_here
API_KEY_PREFIX=hd_
API_KEY_LENGTH=32

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=harsha_delights_gateway
DB_USER=harsha_admin
DB_PASS=harsha_postgres_2024
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=1800000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_BASIC_RPM=30
RATE_LIMIT_STANDARD_RPM=100
RATE_LIMIT_PREMIUM_RPM=500
RATE_LIMIT_UNLIMITED_RPM=0

# =====================================================================================
# MEDUSA.JS CONFIGURATION
# =====================================================================================

# Medusa JWT & Cookies
MEDUSA_JWT_SECRET=medusa_jwt_secret_key_256_bits_here
MEDUSA_COOKIE_SECRET=medusa_cookie_secret_key_here

# Medusa Admin
MEDUSA_ADMIN_CORS=http://localhost:7000,http://localhost:7001

# ERPNext Integration
ERPNEXT_SYNC_ENABLED=true
ERPNEXT_SYNC_INTERVAL=300000

# =====================================================================================
# ESPOCRM CONFIGURATION
# =====================================================================================

ESPOCRM_ADMIN_PASSWORD=espocrm_admin_2024

# =====================================================================================
# PAYMENT PROCESSING
# =====================================================================================

# Stripe (Development Keys)
STRIPE_API_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal (Development)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# Razorpay (for Indian payments)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# =====================================================================================
# EMAIL CONFIGURATION
# =====================================================================================

# SMTP Settings (for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@harshadelights.com
SMTP_PASSWORD=your_email_password
SMTP_SECURE=false

# Email Templates
FROM_EMAIL=noreply@harshadelights.com
SUPPORT_EMAIL=support@harshadelights.com

# =====================================================================================
# FILE STORAGE CONFIGURATION
# =====================================================================================

# Local File Storage
FILE_STORAGE_TYPE=local
FILE_UPLOAD_MAX_SIZE=50M

# AWS S3 (for production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
S3_BUCKET_NAME=harsha-delights-storage

# =====================================================================================
# MONITORING & LOGGING
# =====================================================================================

# Grafana
GRAFANA_ADMIN_PASSWORD=grafana_admin_2024

# Log Levels
LOG_LEVEL=debug
API_LOG_LEVEL=info
DATABASE_LOG_LEVEL=warn

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# =====================================================================================
# EXTERNAL INTEGRATIONS
# =====================================================================================

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_ACCESS_TOKEN=your_whatsapp_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# SMS Gateway
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Google Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X

# Social Media
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# =====================================================================================
# BACKUP CONFIGURATION
# =====================================================================================

# Database Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# Cloud Backup
BACKUP_STORAGE_TYPE=local
BACKUP_S3_BUCKET=harsha-delights-backups
BACKUP_ENCRYPTION_KEY=backup_encryption_key_32_chars

# =====================================================================================
# DEVELOPMENT TOOLS
# =====================================================================================

# Development Settings
DEBUG=harsha:*
ENABLE_SWAGGER=true
ENABLE_PROFILING=true

# Hot Reload
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# =====================================================================================
# SECURITY CONFIGURATION
# =====================================================================================

# Session Security
SESSION_SECRET=session_secret_key_64_chars_here
SESSION_MAX_AGE=86400000

# CSRF Protection
CSRF_SECRET=csrf_secret_key_32_chars_here

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=900

# IP Whitelist (comma-separated)
IP_WHITELIST=127.0.0.1,::1

# =====================================================================================
# BUSINESS CONFIGURATION
# =====================================================================================

# Company Information
COMPANY_NAME=Harsha Delights
COMPANY_ADDRESS=Your Company Address Here
COMPANY_PHONE=+91-XXXXXXXXXX
COMPANY_EMAIL=info@harshadelights.com
COMPANY_GST=XXXXXXXXXXXXXXXXXXXX

# Business Settings
DEFAULT_CURRENCY=INR
DEFAULT_TIMEZONE=Asia/Kolkata
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00

# Inventory Settings
LOW_STOCK_THRESHOLD=10
EXPIRY_WARNING_DAYS=7
QUALITY_CHECK_REQUIRED=true

# Customer Settings
DEFAULT_CUSTOMER_GROUP=Retail
DEFAULT_PRICE_LIST=Standard Selling
CUSTOMER_CREDIT_LIMIT=50000

# =====================================================================================
# FEATURE FLAGS
# =====================================================================================

# Application Features
ENABLE_CUSTOMER_PORTAL=true
ENABLE_MOBILE_APP=true
ENABLE_OFFLINE_MODE=false

# Business Features
ENABLE_MULTI_CURRENCY=false
ENABLE_MULTI_COMPANY=false
ENABLE_SUBSCRIPTION_BILLING=true

# Integration Features
ENABLE_ERPNEXT_SYNC=true
ENABLE_ACCOUNTING_SYNC=true
ENABLE_INVENTORY_SYNC=true

# =====================================================================================
# PERFORMANCE TUNING
# =====================================================================================

# Connection Pools
DB_POOL_MIN=2
DB_POOL_MAX=10
REDIS_POOL_MAX=20

# Cache Settings
CACHE_TTL=3600
QUERY_CACHE_SIZE=100
SESSION_CACHE_SIZE=1000

# Worker Processes
WEB_CONCURRENCY=4
WORKER_PROCESSES=2

