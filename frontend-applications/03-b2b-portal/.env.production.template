# Harsha Delights B2B Portal - Production Environment
# Copy this file to .env.production and fill in actual values

# Application
NEXT_PUBLIC_APP_NAME="Harsha Delights B2B Portal"
NEXT_PUBLIC_APP_URL="https://portal.harshadelights.com"
NODE_ENV="production"

# API Configuration
NEXT_PUBLIC_API_URL="https://harshadelights.onrender.com"
NEXT_PUBLIC_API_GATEWAY_URL="https://harshadelights.onrender.com"

# WorkOS Authentication (required for B2B access)
WORKOS_API_KEY="sk_live_your_workos_api_key_here"
WORKOS_CLIENT_ID="client_your_workos_client_id_here"
WORKOS_COOKIE_PASSWORD="complex-password-at-least-32-characters-long-change-this"
WORKOS_REDIRECT_URI="https://portal.harshadelights.com/auth/callback"

# NextAuth Configuration
NEXTAUTH_URL="https://portal.harshadelights.com"
NEXTAUTH_SECRET="your-nextauth-secret-change-this-to-random-string"

# Company Information
NEXT_PUBLIC_COMPANY_NAME="Harsha Delights"
NEXT_PUBLIC_COMPANY_EMAIL="admin@harshadelights.com"

# Feature Flags
NEXT_PUBLIC_ENABLE_BULK_OPERATIONS="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_EXPORT="true"
