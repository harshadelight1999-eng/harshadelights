# Server Configuration
PORT=3005
NODE_ENV=development

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ERPNext Configuration
ERPNEXT_URL=http://localhost:8000
ERPNEXT_API_KEY=your_erpnext_api_key
ERPNEXT_API_SECRET=your_erpnext_api_secret

# EspoCRM Configuration
ESPOCRM_URL=http://localhost:8080
ESPOCRM_API_KEY=your_espocrm_api_key
ESPOCRM_USERNAME=admin
ESPOCRM_PASSWORD=your_espocrm_password

# Medusa.js Configuration
MEDUSA_URL=http://localhost:9000
MEDUSA_API_KEY=your_medusa_api_key
MEDUSA_ADMIN_EMAIL=admin@harshadelights.com
MEDUSA_ADMIN_PASSWORD=your_medusa_password

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=harsha_sync
DB_USERNAME=postgres
DB_PASSWORD=your_db_password

# Sync Configuration
SYNC_BATCH_SIZE=100
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY=5000
ENABLE_REAL_TIME_SYNC=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/sync-services.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090