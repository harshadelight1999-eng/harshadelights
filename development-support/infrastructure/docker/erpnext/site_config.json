{
  "db_host": "mariadb",
  "db_port": 3306,
  "db_name": "erpnext_hd",
  "db_password": "erpnext_pass_2024",
  "auto_update": false,
  "restart_supervisor_on_update": false,
  "serve_default_site": true,
  "rebase_on_pull": false,
  "shallow_clone": true,
  "background_workers": 1,
  "gunicorn_workers": 4,

  "redis_cache": "redis://redis:6379/0",
  "redis_queue": "redis://redis:6379/1",
  "redis_socketio": "redis://redis:6379/2",

  "socketio_port": 9000,
  "file_watcher_port": 6787,

  "developer_mode": 1,
  "allow_tests": 1,
  "mail_server": "mailhog",
  "mail_port": 1025,
  "use_ssl": 0,
  "mail_login": "",
  "mail_password": "",

  "encryption_key": "generate_secure_key_32_chars",

  "logging": 1,
  "log_level": "INFO",
  "enable_scheduler": 1,

  "session_cookie_age": 86400,
  "session_cookie_secure": false,
  "session_cookie_httponly": true,

  "csrf_protection": true,
  "cors": [
    "http://localhost:3000",
    "http://localhost:9000",
    "http://localhost:8080"
  ],

  "limits": {
    "space_usage": {
      "database_size": 5000,
      "private_files": 5000,
      "public_files": 5000,
      "backup_size": 5000
    },
    "email_limit": 1000,
    "expiry": null
  },

  "backup": {
    "enabled": true,
    "with_files": true,
    "compress": true
  },

  "monitor": {
    "enabled": true,
    "collect_system_metrics": true,
    "collect_database_metrics": true
  },

  "harsha_delights": {
    "enable_custom_pricing": true,
    "enable_batch_tracking": true,
    "enable_segment_management": true,
    "enable_quality_control": true,
    "pricing_cache_ttl": 3600,
    "batch_alerts_enabled": true,
    "sync_with_external_systems": true
  }
